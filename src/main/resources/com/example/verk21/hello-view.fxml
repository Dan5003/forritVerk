<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.verk21.HelloController">
   <padding>
      <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
   </padding>
   <children>
      <HBox prefHeight="100.0" prefWidth="600.0" spacing="5.0">
         <children>
            <TextArea fx:id="fxLeitarord" HBox.hgrow="ALWAYS" onKeyTyped="#onLeitarord" prefHeight="300.0" prefWidth="170.0" promptText="Sláðu inn leitarorð!" style="-fx-background-color: #ffffff; -fx-border-color: #6b6a6a; -fx-border-width: 2;"/>
            <Label fx:id="fxStadsetningOrds" alignment="CENTER" contentDisplay="CENTER" prefHeight="300.0" prefWidth="170.0" style="-fx-background-color: #ffffff; -fx-border-color: #6b6a6a; -fx-border-width: 2; -fx-padding: 4;" text="0" textAlignment="CENTER"/>
            <!-- Adjusted Button to maintain size -->
            <Button mnemonicParsing="false" onAction="#onLeit" prefHeight="300.0" prefWidth="150.0" text="Leita!"/>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="600.0" spacing="5.0">
         <children>
            <TextArea fx:id="fxTextinn" HBox.hgrow="ALWAYS" onKeyTyped="#onTextaBox" prefHeight="300.0" prefWidth="295.0" promptText="Sláðu inn texta!" style="-fx-background-color: #ffffff; -fx-border-color: #6b6a6a; -fx-border-width: 2;"/>
            <!-- Adjusted Button to maintain size, similar to the first Button -->
            <Button mnemonicParsing="false" onAction="#onVistaTexta" prefHeight="300.0" prefWidth="150.0" text="Vista!"/>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="600.0" spacing="5.0">
         <children>
            <Label fx:id="fxFjoldiOrda" alignment="CENTER" prefHeight="100.0" prefWidth="295.0" style="-fx-background-color: #ffffff; -fx-border-color: #6b6a6a; -fx-border-width: 2; -fx-padding: 4;" text="0" />
            <Button mnemonicParsing="false" onAction="#onTeljaOrd" prefHeight="100.0" prefWidth="150.0" text="Telja orð!" />
         </children>
      </HBox>
      <HBox prefHeight="200.0" prefWidth="600.0" spacing="5.0">
         <children>
            <TextArea fx:id="fxMeaningDisplay" HBox.hgrow="ALWAYS" prefHeight="300.0" prefWidth="600.0" promptText="Merking orðs birtist hér..." editable="false" style="-fx-background-color: #ffffff; -fx-border-color: #6b6a6a; -fx-border-width: 2;" />
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="600.0" spacing="5.0" alignment="CENTER">
         <children>
                  <Button fx:id="fxDictionaryCheck" onAction="#onDictionaryCheck" prefHeight="50.0" prefWidth="150.0" text="Í orðabók?" />
                  <Button fx:id="fxCheckRandomWord" onAction="#onGetRandomWord" prefHeight="50.0" prefWidth="150.0" text="Random Word" />
         </children>
      </HBox>
   </children>
</VBox>